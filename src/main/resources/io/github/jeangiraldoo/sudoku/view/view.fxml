<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootNode" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.jeangiraldoo.sudoku.view.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="gameTittle" alignment="CENTER" text="Sudoku" textAlignment="CENTER" textFill="#87CEEB">
        <padding>
            <Insets bottom="50" />
        </padding>
      <font>
         <Font size="69.0" />
      </font>
    </Label>
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleJugarButton" styleClass="menuPrincipalButton" text="Play">
         <font>
            <Font size="24.0" />
         </font></Button>
        <Button onAction="#handleInformacionButton" styleClass="menuPrincipalButton" text="Information">
         <font>
            <Font size="24.0" />
         </font></Button>
    </HBox>

</VBox>
